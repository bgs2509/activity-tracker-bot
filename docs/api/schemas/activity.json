{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Activity",
  "description": "User activity schema",
  "type": "object",
  "definitions": {
    "ActivityCreate": {
      "type": "object",
      "required": ["user_id", "description", "start_time", "end_time"],
      "properties": {
        "user_id": {
          "type": "integer",
          "description": "User ID",
          "minimum": 1
        },
        "category_id": {
          "type": ["integer", "null"],
          "description": "Category ID (optional)",
          "minimum": 1
        },
        "description": {
          "type": "string",
          "description": "Activity description",
          "minLength": 1,
          "maxLength": 10000
        },
        "tags": {
          "type": ["string", "null"],
          "description": "Comma-separated tags",
          "maxLength": 1000
        },
        "start_time": {
          "type": "string",
          "format": "date-time",
          "description": "Activity start time (ISO 8601)"
        },
        "end_time": {
          "type": "string",
          "format": "date-time",
          "description": "Activity end time (ISO 8601)"
        }
      }
    },
    "ActivityResponse": {
      "type": "object",
      "required": ["id", "user_id", "description", "start_time", "end_time", "duration_minutes", "created_at"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Activity ID"
        },
        "user_id": {
          "type": "integer",
          "description": "User ID"
        },
        "category_id": {
          "type": ["integer", "null"],
          "description": "Category ID"
        },
        "description": {
          "type": "string",
          "description": "Activity description"
        },
        "tags": {
          "type": ["string", "null"],
          "description": "Comma-separated tags"
        },
        "start_time": {
          "type": "string",
          "format": "date-time",
          "description": "Activity start time (ISO 8601)"
        },
        "end_time": {
          "type": "string",
          "format": "date-time",
          "description": "Activity end time (ISO 8601)"
        },
        "duration_minutes": {
          "type": "integer",
          "description": "Duration in minutes",
          "minimum": 0
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp (ISO 8601)"
        }
      }
    }
  }
}
